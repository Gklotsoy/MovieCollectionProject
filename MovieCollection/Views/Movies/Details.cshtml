@model MovieCollection.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
@if (Model.Image != null)
{
    <div>
        <img src="~/images/@Model.Image" alt="@Model.Title" />
    </div>
}

<div>
    @if (ViewBag.Overview != null)
    {
        <h4> Movie Plot </h4>
        <p> @ViewBag.Overview </p>
    }
</div>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ViewDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ViewDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categ.CatName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Platform)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Platform.PlatformName)
        </dd>
    </dl>
</div>

<div class="row">

    @if (ViewBag.Actors != null)
        {
        <div class="col-md-6">
            <h4>Actors</h4>
            @foreach (var actor in ViewBag.Actors)
            {
                <p>@actor</p>
            }  
        </div>
    }

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


