@model IEnumerable<MovieCollection.Models.Platform>

@{
    ViewData["Title"] = "Platforms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Platforms</h1>
<div>
    <a class="btn btn-primary" asp-action="Create">Add Platform</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlatformName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlatformName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
